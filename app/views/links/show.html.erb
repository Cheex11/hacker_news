<h1><%=@link.title %></h1>


<% @link.comments.each do |comment| %>
  <br>
  <div class="comment">
    <p><%= comment.description %></p>
    <p><%= link_to "Edit", edit_link_comment_path(@link, comment), :class => "comment-link" %> |
      <%= link_to "Delete", link_comment_path(@link, comment), :method => 'delete', :class => 'comment-link' %></p>
  </div>
  <br>
<% end %>

<%= link_to "Add a comment", new_link_comment_path(@link), :class => "btn btn-default" %>
